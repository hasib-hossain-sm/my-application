<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyConverterResultActivity">

    <Button
        android:id="@+id/backButtonCurrencyConverterResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Back"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/amount1TextView"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:hint="765436"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="60dp"

        />
    <TextView
        android:id="@+id/currency1TextView"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:hint="Dollar"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="=="
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="150dp"

        />
    <TextView
        android:id="@+id/amount2TextView"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:hint="765436"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="60dp"

        />
    <TextView
        android:id="@+id/currency2TextView"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:hint="Taka"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="200dp"

        />

</RelativeLayout>