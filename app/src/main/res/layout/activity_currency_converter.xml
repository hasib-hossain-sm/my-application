<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrencyConverterActivity">

    <Button
        android:id="@+id/backButtonCurrencyConverter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Back"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CURRENCY CONVERTER"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="40dp"
        android:text="DATA : "
        android:textSize="25dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FROM : "
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="40dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO : "
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="40dp"

        />

    <EditText
        android:text="0"
        android:id="@+id/editTextCurrencyConverterActivity"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="167dp"
        android:hint="Enter Value here "
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/fromSpinner"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="225dp" />

    <Spinner
        android:id="@+id/toSpinner"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="275dp"
        />
    <Button
        android:id="@+id/convertButtonCurrencyConverterActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:textSize="20dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="350dp"
        />

</RelativeLayout>